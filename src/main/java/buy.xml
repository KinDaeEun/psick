<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="buyns">

	<insert id="insert" parameterType="buy">
		<selectKey keyProperty="bno" order="BEFORE" resultType="integer"> 
			select nvl(max(bno), 0) + 1 bno from buy 
		</selectKey>
		insert into buy values(buy_seq.nextval, sysdate, #{b_addr},
		#{b_tel}, #{b_reveiver}, #{id})
	</insert>

	<select id="selectbno" resultType="integer">
		select max(bno) from buy
	</select>

</mapper>